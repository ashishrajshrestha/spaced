<html>
  <head>
    <meta charset="utf-8">
    <title><%= @space.title %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdeliver.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrGftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.10/css/all.css">
  </head>
  <body>
    <div class="container">

    <div class="jumbotron text-center">
      <h1>Make a booking</h1>
    </div>
      <%# <% if policy(Booking).create? %>
        <%# <%= link_to "New booking", new_space_booking_path %>
      <%# <% end %>

      <div class="d-flex justify-content-between">
        <div class="d-flex align-items-center">
          <div class="m-3">
            <img (@space.image, width: 300, height: 200, crop: :fill) >
          </div>
          <div class="text-muted mb-3">
            <h3>Location: <%= @space.location %></h3>
            <h3>Capacity: <%= @space.capacity %></h3>
            <h3>Size: <%= @space.size %> metres squared</h3>
            <h3>Cost: <%= @space.fee %> JPY</h3>
          </div>
        </div>
      </div>
        <div class="mt-3">
          <%= render "form", booking: @booking %>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.
    min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRm5q
    +8nbTov4+1p" crossorigin="anonymous">
    </script>
  </body>

</html>
