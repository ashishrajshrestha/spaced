<html>
  <head>
    <meta charset="utf-8">
    <title><%= @space.title %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdeliver.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrGftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.10/css/all.css">
  </head>

  <body>
    <div class="logged-in">
      <p>You are logged in as user: <%= @space.user.email %></p>
    </div>
    <%# <h1>Impact HUB</h1> %>
    <br>
    <br>
    <div class="title">
      <h1><%= @space.title %></h1>
    </div>
    <br>
    <span class="details">
      <p><%= @space.description %></p>
      <strong>Capacity: <%= @space.capacity %></strong>
      <strong>Size: <%= @space.size %></strong>
      <strong>Â¥ <%= @space.fee %></strong>
    </span>
    <p> Your selected space is: <%= @space.title%></p>
      <div class="m-3">
          <%= cl_image_tag(@space.photos.first.key, width: 300, height: 200, crop: :fill) %>
      </div>

      <div class="text-muted mb-3">
        <h3><%= fa_icon "map-marker"%> <%= @space.location %></h3>
        <h3><%= fa_icon "users"%> <%= @space.capacity %></h3>
        <h3><%= fa_icon "arrows"%> <%= @space.size %> metres squared</h3>
        <h3><%= fa_icon "jpy"%> <%= @space.fee %> JPY</h3>
      </div>

      <div class="mt-3">
        <%= render "form", booking: @booking, space: @space %>
      </div>

    <%= link_to 'Back', spaces_path %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.
    min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRm5q
    +8nbTov4+1p" crossorigin="anonymous"></script>
  </body>
</html>
